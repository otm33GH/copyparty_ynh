###
### Please DO NOT edit this file, it is handled by YunoHost
### Instead, you can edit the user.config file for your own configuration!
###

[global]
  i: 127.0.0.1
  p: __PORT__
  http-only
  e2dsa  # enable file indexing and filesystem scanning
  e2ts   # and enable multimedia indexing
  z, qr  # and zeroconf and qrcode (you can comma-separate arguments)

  # xff are to forward to copyparty the IP of the client
  xff-hdr: x-forwarded-for
  xff-src: 127.0.0.1
  rproxy: 1

# create volumes:
[/]                 # create a volume at "/" (the webroot), which will
  __DATA_DIR__/     # share the contents of "." (the current directory)
  accs:
    r: *            # everyone gets read-access, but
    A: __ADMIN__   # the user "__ADMIN__" gets read-write

# import user config
% user.config
